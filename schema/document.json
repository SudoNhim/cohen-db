{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "document.json",
    "title": "Document",
    "description": "A collection of canonical material tied to a particular time, place, or release",
    "properties": {
        "metadata": {
            "$ref": "metadata.json"
        },
        "content": {
            "$ref": "content.json"
        },
        "children": {
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    }
  }
  