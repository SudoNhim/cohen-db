{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "variation.json",
    "title": "Variation",
    "description": "A variation on another work, while performing it",
    "type": "object",
    "properties": {
        "kind": {
            "enum": [ "variation" ]
        },
        "reference": {
            "description": "ID of the document that this variation is of",
            "type": "string"
        },
        "content": {
            "$ref": "canon.json"
        }
    },
    "required": ["kind", "reference", "content"],
    "additionalProperties": false
}