{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://cohenmachine.net/schema/variation.json",
    "title": "Variation",
    "description": "A variation on another work, while performing it",
    "type": "object",
    "properties": {
        "kind": {
            "const": "variation"
        },
        "reference": {
            "description": "ID of the document that this variation is of",
            "type": "string"
        },
        "content": {
            "$ref": "http://cohenmachine.net/schema/canon.json"
        }
    },
    "required": ["kind", "reference", "content"]
}