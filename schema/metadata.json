{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://cohenmachine.net/schema/metadata.schema.json",
    "title": "Metadata",
    "description": "The metadata of a document, which is a set of fully optional standardized properties",
    "oneOf": [
      {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "id": {
              "description": "Short ID for referencing a part of the document",
              "type": "string"
            },
            "part": {
              "oneOf": [
                {
                  "$ref": "http://cohenmachine.net/schema/note.json"
                },
                {
                  "$ref": "http://cohenmachine.net/schema/prologue.json"
                },
                {
                  "$ref": "http://cohenmachine.net/schema/variation.json"
                }
              ]
            }
          }
        }
      },
      {
        "$ref": "http://cohenmachine.net/schema/canon.json"
      }
    ]
  }
  