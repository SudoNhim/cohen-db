{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "metadata.json",
    "title": "Metadata",
    "description": "The metadata of a document, which is a set of fully optional standardized properties",
    "type": "object",
    "properties": {
      "date": {
        "type": "string",
        "format": "date"
      },
      "source": {
        "type": "string",
        "format": "uri"
      },
      "event": {
        "type": "string"
      },
      "location": {
        "type": "object",
        "properties": {
          "country": {
            "type": "string"
          },
          "city": {
            "type": "string"
          },
          "venue": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    },
    "additionalProperties": false
  }
  