{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "metadata.json",
    "title": "Metadata",
    "description": "The metadata of a document, which is a set of fully optional standardized properties",
    "type": "object",
    "properties": {
      "title": {
        "type": "string"
      },
      "date": {
        "type": "string",
        "format": "date"
      }
    }
  }
  