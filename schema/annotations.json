{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "annotations.json",
    "title": "Annotations",
    "description": "Annotations attached to a file",
    "type": "array",
    "items": {
        "type": "object",
        "title": "Annotation",
        "description": "An annotation",
        "properties": {
            "anchor": {
                "type": "string",
                "description": "A reference to a location in the parent document"
            },
            "tokens": {
                "type": "array",
                "description": "An array of tokens constituting the annotation",
                "minItems": 1,
                "items": {
                    "oneOf": [
                        {
                            "type": "object",
                            "description": "A token of text content",
                            "properties": {
                                "text": {
                                    "type": "string"
                                }
                            },
                            "additionalProperties": false,
                            "required": ["text"]
                        },
                        {
                            "type": "object",
                            "description": "A token referring to an external link",
                            "properties": {
                                "text": {
                                    "type": "string"
                                },
                                "link": {
                                    "type": "string"
                                }
                            },
                            "additionalProperties": false,
                            "required": ["text", "link"]
                        },
                        {
                            "type": "object",
                            "description": "A token referring to another document",
                            "properties": {
                                "docRef": {
                                    "type": "string"
                                }
                            },
                            "additionalProperties": false,
                            "required": ["docRef"]
                        }
                    ]
                }
            }
        },
        "required": ["anchor", "tokens"],
        "additionalProperties": false
    },
    "additionalProperties": false
}