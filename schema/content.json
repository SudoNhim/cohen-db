{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "content.json",
  "title": "Content",
  "description": "The content of a document, which is either a single canonical text part, or a sequence of complex parts",
  "properties": {
    "preamble": {
      "type": "string",
      "description": "Information about the document itself"
    },
    "content": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "description": "Short ID for referencing a part of the document",
                "type": "string"
              },
              "part": {
                "oneOf": [
                  {
                    "$ref": "note.json"
                  },
                  {
                    "$ref": "prologue.json"
                  },
                  {
                    "$ref": "variation.json"
                  }
                ]
              }
            },
            "required": ["id", "part"],
            "additionalProperties": false
          }
        },
        {
          "$ref": "canon.json"
        }
      ]
    }
  },
  "required": ["content"],
  "additionalProperties": false
}
