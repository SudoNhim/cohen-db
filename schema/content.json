{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "content.json",
  "title": "Content",
  "description": "The content of a document, which is either a single canonical text part, or a sequence of complex parts",
  "oneOf": [
    {
      "properties": {
        "kind": {
          "enum": ["simple"]
        },
        "content": {
          "$ref": "maincontent.json"
        },
        "additionalProperties": false
      }
    },
    {
      "properties": {
        "kind": {
          "enum": ["multipart"]
        },
        "sectionalContent": {
          "type": "array",
          "description": "The parts of the multipart document. New items may be appended, but existing ones should not be moved, so as to preserve paths.",
          "items": {
            "$ref": "sectionalcontent.json"
          },
          "minItems": 1
        },
        "content": {
          "$ref": "sectionalcontent.json"
        },
        "additionalProperties": false
      }
    }
  ]
}
