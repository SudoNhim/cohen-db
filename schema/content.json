{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "content.json",
  "title": "Content",
  "description": "The content of a document, which is either a single canonical text part, or a sequence of complex parts",
  "properties": {
    "preamble": {
      "type": "string",
      "description": "Information about the document itself"
    },
    "content": {
      "oneOf": [
        {
          "type": "array",
          "description": "The parts of the multipart document. New items may be appended, but existing ones should not be moved, so as to preserve paths.",
          "items": {
            "oneOf": [
              {
                "$ref": "note.json"
              },
              {
                "$ref": "prologue.json"
              },
              {
                "$ref": "variation.json"
              }
            ]
          },
          "minItems": 1
        },
        {
          "$ref": "text.json"
        }
      ]
    }
  },
  "required": ["content"],
  "additionalProperties": false
}
