{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "canon.json",
    "title": "Canon",
    "description": "Canonical text content, immutable and eternal",
    "type": "object",
    "properties": {
        "kind": {
            "const": "canon"
        },
        "text": {
            "type": "array",
            "description": "An array of paragraphs or stanzas, to be referenced by index",
            "minItems": 1,
            "items": {
                "oneOf": [
                    {
                        "type": "string",
                        "description": "A whole paragraph"
                    },
                    {
                        "type": "array",
                        "description": "A stanza",
                        "minItems": 1,
                        "items": {
                            "type": "string",
                            "description": "A line of the stanza"
                        }
                    }
                ]
            }
        }
        
    },
    "required": ["kind", "text"],
    "additionalProperties": false
}