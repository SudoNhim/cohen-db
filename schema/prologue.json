{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "prologue.json",
    "title": "Prologue",
    "description": "Words spoken about another work, before performing it",
    "type": "object",
    "properties": {
        "kind": {
            "enum": [ "prologue" ]
        },
        "reference": {
            "description": "ID of the document that this prologue is about",
            "type": "string"
        },
        "content": {
            "$ref": "text.json"
        }
    },
    "required": ["kind", "reference", "content"],
    "additionalProperties": false
}