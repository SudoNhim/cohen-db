{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://cohenmachine.net/schema/prologue.json",
    "title": "Prologue",
    "description": "Words spoken about another work, before performing it",
    "type": "object",
    "properties": {
        "kind": {
            "const": "prologue"
        },
        "reference": {
            "description": "ID of the document that this prologue is about",
            "type": "string"
        },
        "content": {
            "$ref": "http://cohenmachine.net/schema/canon.json"
        }
    },
    "required": ["kind", "reference", "content"]
}