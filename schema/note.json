{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "note.json",
    "title": "Note",
    "description": "A text segment, which may optionally refer to another document",
    "type": "object",
    "properties": {
        "kind": {
            "enum": [ "note" ]
        },
        "reference": {
            "description": "ID of the document that this note is about, if any",
            "type": "string"
        },
        "content": {
            "$ref": "text.json"
        }
    },
    "required": ["kind"],
    "additionalProperties": false
}